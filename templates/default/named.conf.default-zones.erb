zone "." {
        type hint;
        file "<%= ::File.join(node['bind']['db_dir'], 'db.root') %>";
};

zone "localhost" {
        type master;
        file "<%= ::File.join(node['bind']['db_dir'], 'db.local') %>";
};

zone "127.in-addr.arpa" {
        type master;
        file "<%= ::File.join(node['bind']['db_dir'], 'db.127') %>";
};

zone "0.in-addr.arpa" {
        type master;
        file "<%= ::File.join(node['bind']['db_dir'], 'db.0') %>";
};

zone "255.in-addr.arpa" {
        type master;
        file "<%= ::File.join(node['bind']['db_dir'], 'db.255') %>";
};
